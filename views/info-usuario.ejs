<main class="asistentes contenedor">
 <h1><%= nombrePagina %> </h1>
 <div class="informacion-usuario">
  <div class="imagen">
   <% if (usuario.imagen) { %>
   <img src="/uploads/perfiles/<%= usuario.imagen %>">
   <% } %>
  </div>
  <div class="texto">
   <%- usuario.descripcion  %>
  </div>
 </div>
 <div class="grupos-usuarios">
  <% if (grupos.length>0) { %>
  <h2>Grupos Creados por el Autor </h2>
  <ul class="lista-grupos">
   <% grupos.forEach(grupo=>{  %>
   <li>
    <div class="imagen">
     <% if (grupo.imagen) { %>
     <img src="/uploads/grupos/<%= grupo.imagen %>">
     <% } else { %>
     <img src="/img/meeti.jpg">
     <%}  %>
    </div>
    <div class="texto">
     <a href="/grupos/<%= grupo.id %>">
      <h3><%= grupo.nombre %></h3>
     </a>
    </div>
   </li>
   <%}) %>
  </ul>
  <% } else { %>
  <p>AÃºn no tiene ningun grupo creado </p>
  <% } %>
 </div>
 <a href="/" class='btn btn-rosa'>Regresar</a>
</main>
