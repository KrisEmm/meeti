<main class="contenedor contenedor-formularios no-padding">
 <h1><%= nombrePagina %> </h1>
 <form action="/nuevo-grupo" method='POST' class="default-form" enctype="multipart/form-data">
  <div class="campo">
   <label>Nombre</label>
   <input type="text" name='nombre' placeholder="Nombre del Grupo">
  </div>
  <div class="campo descripcion">
   <label>Descripci√≥n</label>
   <div class="contenedor-editor">
    <input type="hidden" id='x' name='descripcion'>
    <trix-editor input='x'></trix-editor>
   </div>
  </div>
  <div class="campo">
   <label>Categoria</label>
   <select name="categoria">
    <option value="" selected disabled>--Seleciona Categoria</option>
    <% categorias.forEach(categoria =>{ %>
    <option value="<%= categoria.id %> "> <%= categoria.nombre %> </option>
    <% }) %>
   </select>
  </div>
  <div class="campo">
   <label>Imagen</label>
   <input type="file" name="imagen">
  </div>
  <div class="campo">
   <label>Sitio Web</label>
   <input type="url" name="url" placeholder="Sitio Web">
  </div>
  <div class="campo enviar">
   <a href="/administracion" class='btn btn-rosa' style='margin-right: 1.5rem;'>Cancelar</a>
   <input type="submit" value="Crear Grupo" class='btn btn-azul'>
  </div>
 </form>
</main>
