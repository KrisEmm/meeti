<div class="contenedor proximos-eventos">
 <h1><%= nombrePagina %></h1>
 <% if (meetis.length>0) { %>
 <% meetis.forEach(meeti=> { %>
 <div class="grid columnas-md-3 ">
  <div class="card">
   <% if (meeti.grupo.imagen) { %>
   <img src="/uploads/grupos/<%= meeti.grupo.imagen %>">
   <% } else { %>
   <img src="/img/meeti.jpg" alt="">
   <% } %>
   <div class="card-texto">
    <% moment.locale('es')  %>
    <% const fecha = meeti.fecha+' '+meeti.hora;  %>
    <p class="fecha"><%= moment(fecha).format('LLLL')%>hrs</p>
    <a href="/meeti/<%= meeti.slug %>">
     <h3><%= meeti.titulo %> </h3>
    </a>
    <div class="info-autor">
     <div class="imagen">
      <% if (meeti.usuario.imagen) { %>
      <img src="/uploads/perfiles/<%= meeti.usuario.imagen %>">
      <% } else { %>
      <img src="/img/meeti.jpg" alt="">
      <% } %>
     </div>
     <div class="informacion">
      <p>Organizado por:</p>
      <p class="autor"><%= meeti.usuario.nombre %> </p>
     </div>
    </div>
   </div>
  </div>
  <% }) %>
 </div>
 <% } else { %>
 <p>AÃ¹n no hay meeti`s en esta categoria</p>
 <% } %>
</div>
